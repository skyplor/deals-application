<?xml version="1.0" encoding="utf-8"?>
<resources>
	<style name="MyTheme" parent="@android:style/Theme">
	    <item name="android:windowAnimationStyle">@style/MyTheme.Window</item>
	</style>
	<style name="MyTheme.Window" parent="@android:style/Animation.Activity">
	    <item name="android:activityOpenEnterAnimation">@anim/slide_in_left</item>
	    <item name="android:activityOpenExitAnimation">@anim/slide_out_left</item>
	    <item name="android:activityCloseEnterAnimation">@anim/slide_out_left</item>
	    <item name="android:activityCloseExitAnimation">@anim/slide_out_left</item>
	</style>
	
    
</resources>