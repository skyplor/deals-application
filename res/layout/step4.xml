<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#FFFFFF"
    android:orientation="vertical" >

    <TableLayout
        android:id="@+id/tableLayout1"
        android:layout_width="fill_parent"
        android:layout_height="370dip"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dip" >

        <TableRow
            android:id="@+id/tableRow1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center" >

            <ImageButton
                android:id="@+id/category1"
                android:layout_width="100dip"
                android:layout_height="100dip"
                android:src="@drawable/stub" >
            </ImageButton>

            <ImageButton
                android:id="@+id/category2"
                android:layout_width="100dip"
                android:layout_height="100dip"
                android:src="@drawable/stub" >
            </ImageButton>

            <ImageButton
                android:id="@+id/category3"
                android:layout_width="100dip"
                android:layout_height="100dip"
                android:src="@drawable/stub" >
            </ImageButton>
        </TableRow>

        <TableRow
            android:id="@+id/tableRowWord1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center" >

            <TextView
                android:id="@+id/txtCategory1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Men" 
                android:layout_gravity="center"
                android:textColor="#3E3535"/>

            <TextView
                android:id="@+id/txtCategory2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Women" 
                android:layout_gravity="center"
                android:textColor="#3E3535"/>

            <TextView
                android:id="@+id/txtCategory3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cosmetics"
                android:layout_gravity="center"
                android:textColor="#3E3535" />
        </TableRow>

        <TableRow
            android:id="@+id/tableRow2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center" >

            <ImageButton
                android:id="@+id/category4"
                android:layout_width="100dip"
                android:layout_height="100dip"
                android:src="@drawable/stub" >
            </ImageButton>

            <ImageButton
                android:id="@+id/category5"
                android:layout_width="100dip"
                android:layout_height="100dip"
                android:src="@drawable/stub" >
            </ImageButton>

            <ImageButton
                android:id="@+id/category6"
                android:layout_width="100dip"
                android:layout_height="100dip"
                android:src="@drawable/stub" >
            </ImageButton>
        </TableRow>

        <TableRow
            android:id="@+id/tableRowWord2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center" >

            <TextView
                android:id="@+id/txtCategory4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Electronics" 
                android:layout_gravity="center"
                android:textColor="#3E3535"/>

            <TextView
                android:id="@+id/txtCategory5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Household" 
                android:layout_gravity="center"
                android:textColor="#3E3535"/>

            <TextView
                android:id="@+id/txtCategory6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Kids" 
                android:layout_gravity="center"
                android:textColor="#3E3535"/>
        </TableRow>

        <TableRow
            android:id="@+id/tableRow3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center" >

            <ImageButton
                android:id="@+id/category7"
                android:layout_width="100dip"
                android:layout_height="100dip"
                android:src="@drawable/stub" >
            </ImageButton>

            <ImageButton
                android:id="@+id/category8"
                android:layout_width="100dip"
                android:layout_height="100dip"
                android:src="@drawable/stub" >
            </ImageButton>

            <ImageButton
                android:id="@+id/category9"
                android:layout_width="100dip"
                android:layout_height="100dip"
                android:src="@drawable/stub" >
            </ImageButton>
        </TableRow>

        <TableRow
            android:id="@+id/tableRowWord3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center" >

            <TextView
                android:id="@+id/txtCategory7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Groceries" 
                android:layout_gravity="center"
                android:textColor="#3E3535"/>

            <TextView
                android:id="@+id/txtCategory8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Games/Books"
                android:layout_gravity="center"
                android:textColor="#3E3535" />

            <TextView
                android:id="@+id/txtCategory9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Others"
                android:layout_gravity="center"
                android:textColor="#3E3535"/>
        </TableRow>
    </TableLayout>

</RelativeLayout>