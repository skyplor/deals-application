<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/relativeLayout1"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    <RelativeLayout
        android:id="@+id/relativeLayout1"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="#eeeeee" >
        
        <ImageView
            android:id="@+id/imgUser"
            android:layout_width="25dp"
            android:layout_height="20dp"
            android:layout_alignLeft="@+id/image2"
            android:layout_marginTop="10dp"
            android:src="@drawable/user" >
        </ImageView>

        <TextView
            android:id="@+id/txtOwner"
            android:layout_width="100dp"
            android:layout_height="20dp"
            android:layout_toRightOf="@+id/imgUser"
            android:layout_alignParentTop="true"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="2dp"
            android:text="Mingen Lee"
            android:textColor="#302217"
            android:textSize="15dp"
            android:textStyle="bold" >
        </TextView>
		
        <ImageView
            android:id="@+id/imgComments"
            android:layout_width="25dp"
            android:layout_height="20dp"
            android:layout_alignRight="@+id/image2"
            android:layout_marginTop="10dp"
            android:src="@drawable/comment" >
        </ImageView>
        
        <TextView
                android:id="@+id/lblmaincomments"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:text="1"
                android:textSize="20dp"
                android:textStyle="bold"
                android:textColor="#302217"
                android:layout_alignParentTop="true"
                android:layout_marginTop="5dp"
                android:layout_marginRight="5dp"
                android:layout_toLeftOf="@+id/imgComments"
                android:gravity="center_vertical|right" >
            </TextView>
        
        <ImageView
            android:id="@+id/imgLikes"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginTop="10dp"
            android:layout_toLeftOf="@+id/lblmaincomments"
            android:src="@drawable/likepicbrown"
            android:layout_marginRight="5dip" >
        </ImageView>
        
        <TextView
                android:id="@+id/lblmainlikes"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:text="1"
                android:textSize="20dp"
                android:textStyle="bold"
                android:textColor="#302217"
                android:layout_alignParentTop="true"
                android:layout_toLeftOf="@+id/imgLikes"
                android:layout_marginTop="5dp"
                android:layout_marginRight="5dp"
                android:gravity="center_vertical|right" >
            </TextView>
        
        <TextView
            android:id="@+id/txtDate"
            android:layout_width="160dp"
            android:layout_height="20dp"
            android:layout_alignLeft="@+id/image2"
            android:layout_below="@+id/image2"
            android:text="23 Feb 2011"
            android:textColor="#989898"
            android:textSize="15dp"
            android:textStyle="bold" >
        </TextView>

        <TextView
            android:id="@+id/txtHownear"
            android:layout_width="wrap_content"
            android:layout_height="12dp"
            android:gravity="left|center_vertical"
            android:textColor="#302217"
            android:textSize="10dp"
            android:textStyle="bold"
            android:layout_below="@+id/txtDescription"
            android:layout_alignLeft="@+id/image2" >
        </TextView>

        <TextView
            android:id="@+id/productprice"
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text"
            android:layout_alignLeft="@+id/imgshoplogo"
            android:text="$10.00"
            android:textColor="#283860"
            android:textSize="33dp"
            android:textStyle="bold" >
        </TextView>

        <TextView
            android:id="@+id/txtDescription"
            android:layout_width="200dp"
            android:layout_height="20dp"
            android:layout_alignLeft="@+id/imgshoplogo"
            android:layout_below="@+id/productprice"
            android:text="Ang Mo Kio Hub"
            android:textColor="#302217"
            android:textSize="15dp"
            android:textStyle="bold" />
		
        <ImageView
            android:id="@+id/imgshoplogo"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignLeft="@+id/image2"
            android:layout_below="@+id/txtDate"
            android:src="@drawable/shopicon" >
        </ImageView>
        
        <TextView
            android:id="@+id/text"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/imgshoplogo"
            android:layout_below="@+id/txtDate"
            android:layout_toLeftOf="@+id/typeBadge"
            android:text="TextView"
            android:textColor="#302217"
            android:textSize="23dp"
            android:textStyle="bold" >
        </TextView>

        <ImageView
            android:id="@+id/typeBadge"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_below="@+id/image2"
            android:layout_alignRight="@+id/image2"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="15dp"
            android:src="@drawable/badge" >
        </ImageView>

        <TextView
            android:id="@+id/percentTesting"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/image2"
            android:layout_marginRight="30dp"
            android:layout_marginTop="35dp"
            android:text="30%"
            android:textColor="#283860"
            android:textSize="30dp"
            android:textStyle="bold" >
        </TextView>

        <ImageView
            android:id="@+id/image2"
            android:layout_width="300dp"
            android:layout_height="360dp"
            android:layout_below="@+id/txtOwner"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            android:scaleType="fitXY"
            android:background="@drawable/border" />
    </RelativeLayout>

</RelativeLayout>