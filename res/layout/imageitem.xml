<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/relativeLayout1"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    <RelativeLayout
        android:id="@+id/relativeLayout1"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="#FFFFFF" >

        <ImageView
            android:id="@+id/imageborder"
            android:layout_width="350px"
            android:layout_height="400px"
            android:layout_centerHorizontal="true"
            android:scaleType="fitXY"
            android:src="@drawable/polaroidlayout2" >
        </ImageView>

        <TextView
            android:id="@+id/txtOwner"
            android:layout_width="100dip"
            android:layout_height="15dip"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="32dip"
            android:layout_marginTop="15dip"
            android:text="Mingen Lee"
            android:textColor="#302217"
            android:textSize="12dip"
            android:textStyle="bold" >
        </TextView>

        <TextView
            android:id="@+id/txtDate"
            android:layout_width="70dip"
            android:layout_height="15dip"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginRight="25dip"
            android:layout_marginTop="15dip"
            android:text="Mingen Lee"
            android:textColor="#302217"
            android:textSize="12dip"
            android:textStyle="bold" >
        </TextView>

        <TextView
            android:id="@+id/txtHownear"
            android:layout_width="100dip"
            android:layout_height="20dip"
            android:layout_alignLeft="@+id/text"
            android:layout_below="@+id/txtDescription"
            android:textColor="#302217"
            android:textSize="10dip" >
        </TextView>

        <TextView
            android:id="@+id/productprice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text"
            android:layout_alignLeft="@+id/text"
            android:text="$10.00"
            android:textColor="#283860"
            android:textSize="27dip"
            android:textStyle="bold" >
        </TextView>

        <TextView
            android:id="@+id/txtDescription"
            android:layout_width="150dip"
            android:layout_height="12dip"
            android:layout_alignLeft="@+id/text"
            android:layout_below="@+id/productprice"
            android:text="Ang Mo Kio Hub"
            android:textColor="#302217"
            android:textSize="10dip"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/text"
            android:layout_width="100dip"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/image2"
            android:layout_below="@+id/image2"
            android:layout_marginTop="30dip"
            android:layout_toLeftOf="@+id/typeBadge"
            android:text="TextView"
            android:textColor="#302217"
            android:textSize="20dip"
            android:textStyle="bold" >
        </TextView>

        <ImageView
            android:id="@+id/typeBadge"
            android:layout_width="120px"
            android:layout_height="120px"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/image2"
            android:layout_marginRight="5dip"
            android:layout_marginTop="5dip"
            android:src="@drawable/badge" >
        </ImageView>

        <TextView
            android:id="@+id/percentTesting"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/image2"
            android:layout_marginRight="32dip"
            android:layout_marginTop="32dip"
            android:text="30%"
            android:textColor="#283860"
            android:textSize="30dip"
            android:textStyle="bold" >
        </TextView>

        <ImageView
            android:id="@+id/image2"
            android:layout_width="230dip"
            android:layout_height="230dip"
            android:layout_alignTop="@+id/imageborder"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="40dp"
            android:scaleType="fitXY"/>
    </RelativeLayout>

</RelativeLayout>