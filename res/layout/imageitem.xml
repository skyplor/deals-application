<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/relativeLayout1"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    <RelativeLayout
        android:id="@+id/relativeLayout1"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="#eeeeee" >
        
        <TextView
            android:id="@+id/txtDate"
            android:layout_width="100dp"
            android:layout_height="20dp"
            android:layout_alignLeft="@+id/imageborder"
            android:layout_alignParentTop="true"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="2dp"
            android:text="TextView"
            android:textColor="#302217"
            android:textSize="15dp"
            android:textStyle="bold" >
        </TextView>
		
        <ImageView
            android:id="@+id/imgComments"
            android:layout_width="25dp"
            android:layout_height="20dp"
            android:layout_alignRight="@+id/image2"
            android:layout_marginTop="5dp"
            android:src="@drawable/comment" >
        </ImageView>
        
        <TextView
                android:id="@+id/lblmaincomments"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:text="1"
                android:textSize="20dp"
                android:textStyle="bold"
                android:textColor="#302217"
                android:layout_alignParentTop="true"
                android:layout_marginTop="0dp"
                android:layout_marginRight="5dp"
                android:layout_toLeftOf="@+id/imgComments"
                android:gravity="center_vertical|right" >
            </TextView>
        
        <ImageView
            android:id="@+id/imgLikes"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginTop="5dp"
            android:layout_toLeftOf="@+id/lblmaincomments"
            android:src="@drawable/likepic"
            android:layout_marginRight="5dip" >
        </ImageView>
        
        <TextView
                android:id="@+id/lblmainlikes"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:text="1"
                android:textSize="20dp"
                android:textStyle="bold"
                android:textColor="#302217"
                android:layout_alignParentTop="true"
                android:layout_toLeftOf="@+id/imgLikes"
                android:layout_marginTop="0dp"
                android:layout_marginRight="5dp"
                android:gravity="center_vertical|right" >
            </TextView>
        
        <TextView
            android:id="@+id/txtHownear"
            android:layout_width="wrap_content"
            android:layout_height="15dp"
            android:gravity="left|center_vertical"
            android:textColor="#302217"
            android:textSize="12dp"
            android:textStyle="bold"
            android:text="(100m away)"
            android:layout_below="@+id/txtDescription"
            android:layout_alignLeft="@+id/imageborder" >
        </TextView>
        
        <TextView
            android:id="@+id/space"
            android:layout_width="wrap_content"
            android:layout_height="15dp"
            android:gravity="left|center_vertical"
            android:textColor="#302217"
            android:textSize="12dp"
            android:textStyle="bold"
            android:text=""
            android:layout_below="@+id/txtHownear"
            android:layout_alignLeft="@+id/imageborder" >
        </TextView>

        <TextView
            android:id="@+id/productprice"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imageborder"
            android:layout_alignRight="@+id/image2"
            android:layout_marginTop="10dp"
            android:gravity="right|center"
            android:text="$10.00"
            android:textColor="#283860"
            android:textSize="35dp"
            android:textStyle="bold" >
        </TextView>

        <TextView
            android:id="@+id/txtDescription"
            android:layout_width="180dp"
            android:layout_height="20dp"
            android:layout_alignLeft="@+id/imgshoplogo"
            android:layout_below="@+id/text"
            android:text="TextView"
            android:textColor="#302217"
            android:layout_marginTop="5dp"
            android:textSize="13dp"
            android:textStyle="bold" />
		
        <ImageView
            android:id="@+id/imgshoplogo"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_alignLeft="@+id/imageborder"
            android:layout_below="@+id/imageborder"
            android:src="@drawable/shopicon" >
        </ImageView>
        
        <TextView
            android:id="@+id/text"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/imgshoplogo"
            android:layout_below="@+id/imageborder"
            android:layout_marginTop="2dp"
            android:text="TextView"
            android:textColor="#302217"
            android:textSize="15dp"
            android:textStyle="bold" >
        </TextView>
		
        <ImageView
            android:id="@+id/imageborder"
            android:layout_width="310dp"
            android:layout_height="310dp"
            android:layout_below="@+id/txtDate"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            android:padding="2dp"
            android:scaleType="fitXY"
            android:background="@drawable/border3" />
        
        <ImageView
            android:id="@+id/image2"
            android:layout_width="292dp"
            android:layout_height="292dp"
            android:layout_below="@+id/txtDate"
            android:layout_marginTop="14dp"
            android:layout_centerHorizontal="true"
            android:scaleType="fitXY"
            android:background="@drawable/border"/>
        
                <ImageView
            android:id="@+id/typeBadge"
            android:layout_width="120dp"
            android:layout_height="50dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="-20dp"
            android:layout_marginBottom="0dp"
            android:layout_alignBottom="@+id/imageborder"
            android:src="@drawable/pricetag" >
        </ImageView>
        
                <TextView
            android:id="@+id/percentTesting"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignBottom="@+id/imageborder"
            android:layout_marginRight="12dp"
            android:layout_marginBottom="5dp"
            android:text="30%"
            android:textColor="#FFFFFF"
            android:textSize="30dp"
            android:textStyle="bold" >
        </TextView>
    </RelativeLayout>

</RelativeLayout>