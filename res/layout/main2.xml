<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent"
	android:background="#98AFC7">
<ImageView
	android:id="@+id/logo"
	android:layout_width="fill_parent"
	android:layout_height="wrap_content"
	android:src="@drawable/icon"
	android:layout_centerVertical="true"
	android:layout_above="@+id/email" />
<TextView
	android:id="@+id/lblemail"
	android:text="email: "
	android:layout_alignParentLeft="true"
	android:layout_centerVertical="true"
	android:layout_width="fill_parent"
	android:layout_height="wrap_content"
	android:textColor="#FFFFFF"
	android:textSize="18dp"
	android:textStyle="bold"
	android:layout_above="@+id/empty" />
<EditText 
	android:inputType="textEmailAddress" 
	android:layout_width="230dp" 
	android:id="@+id/email" 
	android:layout_height="wrap_content" 
	android:layout_above="@+id/password"
	android:layout_alignParentRight="true" />
<TextView
	android:id="@+id/empty"
	android:text="     "
	android:layout_width="80dp" 
	android:layout_height="wrap_content"
	android:layout_alignParentLeft="true"
	android:layout_centerVertical="true"
	android:layout_above="@+id/lblpassword" />	
<TextView
	android:id="@+id/lblpassword"
	android:text="password: "
	android:layout_width="fill_parent"
	android:layout_height="wrap_content"
	android:textColor="#FFFFFF"
	android:textSize="18dp"
	android:textStyle="bold"
	android:layout_alignParentLeft="true"
	android:layout_centerVertical="true" />
<EditText 
	android:inputType="textPassword" 
	android:id="@+id/password" 
	android:layout_height="wrap_content" 
	android:layout_centerVertical="true"
	android:layout_alignParentRight="true"
	android:layout_width="230dp" />
<Button
	android:id="@+id/signin"
	android:layout_width="100dp"
	android:layout_height="wrap_content"
	android:text="Sign in"
	android:layout_centerHorizontal="true"
	android:layout_below="@+id/password" />
<ImageButton
	android:id="@+id/fblogin"
	android:layout_width="wrap_content"
	android:layout_height="wrap_content"
	android:src="@drawable/loginbutton"
	android:layout_centerHorizontal="true"
	android:layout_below="@+id/signin" />
<ImageButton
	android:id="@+id/twtlogin"
	android:layout_width="wrap_content"
	android:layout_height="wrap_content"
	android:src="@drawable/twitterconnect"
	android:layout_centerHorizontal="true"
	android:layout_below="@+id/fblogin" />
<Button
	android:id="@+id/register"
	android:layout_width="100dp"
	android:layout_height="wrap_content"
	android:text="Register"
	android:layout_centerHorizontal="true"
	android:layout_alignParentBottom="true" />
</RelativeLayout>
