<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/productdetailLayout"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/background"
    android:orientation="vertical" >

    <ListView
        android:id="@+id/listComments"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_alignLeft="@+id/txtEditremarks"
        android:layout_below="@+id/btnsubmitcomments"
        android:layout_marginTop="10dp" >
    </ListView>

    <EditText
        android:id="@+id/txtEditremarks"
        android:layout_width="300dp"
        android:layout_height="100dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/edittext_rounded_corners"
        android:inputType="textMultiLine" >
    </EditText>

    <Button
        android:id="@+id/btnsubmitcomments"
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:layout_below="@+id/txtEditremarks"
        android:layout_marginTop="4dp"
        android:layout_alignRight="@+id/txtEditremarks"
        android:background="@drawable/button_rounded_corners"
        android:text="Comment"
        android:textColor="#FFFFFF"
        android:textSize="15dp"
        android:textStyle="bold" />

</RelativeLayout>