<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent"
	android:id="@+id/productdetailLayout"
	android:background="@drawable/background">
<com.google.android.maps.MapView
			android:id="@+id/shopMap"
			android:layout_height="150dp"
			android:clickable="true"
			android:layout_width="150dp"
			android:layout_alignParentTop="true"
			android:layout_alignParentLeft="true"
			android:layout_marginLeft="10dp"
			android:layout_marginTop="10dp"
			android:apiKey="0fJKoBXvkjaxqXZ_loYfQEEXmINxngMMjOROQSQ">
</com.google.android.maps.MapView>
    	     
<TextView android:text="Shop name" 
		  android:layout_height="wrap_content" 
		  android:id="@+id/shopdetailName" 
		  android:layout_width="wrap_content" 
		  android:textColor="#000000"
		  android:layout_toRightOf="@+id/shopMap"
		  android:layout_marginLeft="10dip"
		  android:layout_marginTop="10dip"
		  android:textStyle="bold"
		  android:textSize="25dp">
</TextView>
<TextView android:text="Shop address" 
		  android:layout_height="wrap_content" 
		  android:id="@+id/lblDetailshopaddress" 
		  android:layout_width="wrap_content" 
		  android:textColor="#000000"
		  android:layout_below="@+id/shopdetailName"
		  android:layout_toRightOf="@+id/shopMap"
		  android:layout_marginLeft="10dip"
		  android:textSize="20dp">
</TextView>

<ImageView
    android:id="@+id/lblRelatedProducts"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentLeft="true"
    android:layout_below="@+id/shopMap"
    android:layout_marginTop="5dip"
    android:src="@drawable/relatedproducts" >

</ImageView>

<ListView
    android:id="@+id/listDetailBrowse"
    android:layout_width="fill_parent"
    android:layout_height="300dip"
    android:layout_below="@+id/lblRelatedProducts"
    android:layout_alignParentBottom="true" >

</ListView>
</RelativeLayout>
