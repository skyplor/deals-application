<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/background"
    android:orientation="vertical" >

            <ImageView
                android:id="@+id/imgstep4"
                android:layout_width="300dp"
                android:layout_height="50dp"
                android:src="@drawable/step4"
                android:layout_alignParentLeft="true">
            </ImageView>
    
    <RelativeLayout
        android:id="@+id/tableLayout2"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentTop="true"
        android:layout_below="@+id/relative1"
        android:layout_marginTop="20dip" >
        
            <TextView
                android:id="@+id/txtNameInput"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="What is the product?"
                android:textColor="#000000"
                android:layout_centerHorizontal="true"
                android:layout_alignParentTop="true"
                android:layout_marginTop="40dp"
                android:textSize="20dp"
                android:textStyle="bold">
            </TextView>

            <EditText
                android:id="@+id/txtNameInput2"
                android:layout_width="270dp"
                android:layout_height="wrap_content"
                android:background="@drawable/edittext_rounded_corners"
                android:layout_below="@+id/txtNameInput"
                android:layout_centerHorizontal="true"
                android:singleLine="true"
                android:gravity="center">
            </EditText>

        <RelativeLayout
            android:id="@+id/relative1"
            android:layout_width="fill_parent"
            android:layout_height="50dip"
            android:layout_below="@+id/txtNameInput2"
            android:layout_marginTop="20dp" >

            <RadioGroup
                android:id="@+id/radSelection"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:orientation="horizontal"
                android:layout_below="@+id/txtNameInput2">

                <RadioButton
                    android:id="@+id/radPercent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="true"
                    android:text="Percentage"
                    android:textColor="#000000" >
                </RadioButton>

                <RadioButton
                    android:id="@+id/radOriginal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Original Price"
                    android:textColor="#000000" >
                </RadioButton>
            </RadioGroup>
        </RelativeLayout>

            <TextView
                android:id="@+id/txtInput2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="How much is the product?"
                android:textColor="#000000"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dip"
                android:layout_below="@+id/relative1"
                android:textSize="20dp"
                android:textStyle="bold">
            </TextView>
            
            <EditText
                android:id="@+id/txtPrice"
                android:layout_width="270dp"
                android:layout_height="wrap_content"
                android:background="@drawable/edittext_rounded_corners"
                android:inputType="numberDecimal" 
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/txtInput2"
                android:singleLine="true"
                android:gravity="center">
            </EditText>

            <TextView
                android:id="@+id/txtInput"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Percentage Discount?"
                android:textColor="#000000"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dip"
                android:layout_below="@+id/txtPrice"
                android:gravity="center"
                android:textSize="20dp"
                android:textStyle="bold">
            </TextView>

            <EditText
                android:id="@+id/txtPrice2"
                android:layout_width="270dp"
                android:layout_height="wrap_content"
                android:background="@drawable/edittext_rounded_corners"
                android:inputType="numberDecimal"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/txtInput"
                android:singleLine="true"
                android:gravity="center">
            </EditText>
            
            <ImageView
                android:id="@+id/percentimage"
                android:layout_width="30dp"
                android:layout_height="50dp"
                android:src="@drawable/percentage2"
                android:layout_toRightOf="@+id/txtPrice2"
                android:layout_below="@+id/txtPrice"
                android:layout_marginTop="30dp">
            </ImageView>

            <Button
                android:id="@+id/submitdealbutton"
                android:layout_width="150dp"
                android:layout_height="40dp"
                android:text="Submit Deal"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="30dp"
                android:layout_below="@+id/txtPrice2"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:background="@drawable/button_rounded_corners">
            </Button>
    </RelativeLayout>

</RelativeLayout>